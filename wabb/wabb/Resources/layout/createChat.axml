
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:minWidth="25px"
	android:minHeight="25px"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/linearLayout1">
	<TextView
		android:text="Create Chat"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/createChatTitle"
		android:layout_marginTop="10dp"
		android:layout_marginHorizontal="10dp"
		android:textStyle="bold" />
	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/chatNameField"
		android:layout_gravity="end"
		android:layout_marginHorizontal="10dp"
		android:hint="Chat Name" />
    <EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/chatInvites"
		android:layout_gravity="end"
		android:layout_marginHorizontal="10dp"
		android:hint="Invite Users (Comma Separated)" />
	<Button
		android:text="Create Chat"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/createChatButton"
		android:layout_marginHorizontal="10dp"
		android:layout_gravity="end"
		android:paddingBottom="20dp" />
	<Button
		android:text="Back"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/backButtonOnCreateChat"
		android:layout_marginHorizontal="10dp"
		android:layout_gravity="end" />
</LinearLayout>