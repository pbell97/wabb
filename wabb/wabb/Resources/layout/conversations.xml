
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
	<Button
		android:text="Create Chat"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/createNewChatButton" />
	<Button
		android:text="Backup Data"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/backupDataButton" />
    <Button
        android:text="Patrick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button0"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp" 
        android:onClick="btnZeroClick"/>
    <Button
        android:text="Dylan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp" 
        android:onClick="btnOneClick"/>
    <Button
        android:text="Spencer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp" 
        android:onClick="btnTwoClick"/>
    <Button
        android:text="Kohler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp" 
        android:onClick="btnThreeClick"/>
    <Button
        android:text="jAKE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp" 
        android:onClick="btnFourClick"/>
    <Button
        android:text="Group A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp" 
        android:onClick="btnFiveClick"/>
    <Button
        android:text="Group B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp" 
        android:onClick="btnSixClick"/>
    <Button
        android:text="Group C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp" 
        android:onClick="btnSevenClick"/>
    <Button
        android:text="GO BACK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp" 
        android:onClick="btnEightClick"/>
</LinearLayout>