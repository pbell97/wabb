
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2">
            <Button
                android:text="Backup Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/backupDataButton"
                android:textColor="#ff1976d2"
                android:background="#ff448aff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp" />
            <Button
                android:text="Create Chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/createNewChatButton"
                android:textColor="#ff0288d1"
                android:background="#ff40c4ff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginHorizontal="10dp" />
            <Button
                android:text="Patrick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button0"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:onClick="btnZeroClick"
                android:background="#ff18ffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ff0097a7" />
            <Button
                android:text="Dylan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:onClick="btnOneClick"
                android:background="#ff18ffff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ff0097a7" />
            <Button
                android:text="Spencer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:onClick="btnTwoClick"
                android:background="#ff18ffff"
                android:textColor="#ff0097a7"
                android:textStyle="bold"
                android:textSize="20dp" />
            <Button
                android:text="Kohler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:onClick="btnThreeClick"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ff0097a7"
                android:background="#ff18ffff" />
            <Button
                android:text="jAKE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:onClick="btnFourClick"
                android:textColor="#ff0097a7"
                android:background="#ff18ffff"
                android:textStyle="bold"
                android:textSize="20dp" />
            <Button
                android:text="Group A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button5"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:onClick="btnFiveClick"
                android:textColor="#ff0097a7"
                android:background="#ff18ffff"
                android:textSize="20dp"
                android:textStyle="bold" />
            <Button
                android:text="Group B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button6"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:onClick="btnSixClick"
                android:textSize="20dp"
                android:textColor="#ff0097a7"
                android:background="#ff18ffff"
                android:textStyle="bold" />
            <Button
                android:text="Group C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button7"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:onClick="btnSevenClick"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#ff18ffff"
                android:textColor="#ff0097a7" />
            <Button
                android:text="GO BACK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button8"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:onClick="btnEightClick"
                android:textColor="#ff0288d1"
                android:background="#ff40c4ff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>